@{
}

@model IEnumerable<string>

<!--Layout for the side bar to load up the different categories to be filtered by-->

<div class="d-grid gap-2">
    <a asp-controller="Home" asp-action="Index" asp-route-category="" asp-route-pageNum="" class="btn btn-outline-secondary">Home</a>
    <br />

    @foreach (string c in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-category="@c" asp-route-pageNum=""
           class="btn @(ViewBag.SelectedType == c ? "btn-primary" : "btn-outline-secondary")">@c</a>
    }
</div>