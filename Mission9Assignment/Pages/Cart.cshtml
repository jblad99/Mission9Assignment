@page
@model Mission9Assignment.Pages.CartModel
@{
}

<!--Page for cart, references the basket item, displays table of the customer's cart-->

<!--Bootstrap alerts added to page.-->
<div class="alert alert-success" role="alert">
    Book successfully added to cart!
</div>

<h2>Your cart</h2>

<table class="table table-bordered table-striped">

    <thead>
        <tr>
            <th>Title</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Subtotal</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var i in Model.basket.Items)
        {
            <tr>
                <td>@i.Book.Title</td>
                <td>@i.Quantity</td>
                <td>@((i.Book.Price).ToString("c"))</td>
                <td>@((i.Quantity * i.Book.Price).ToString("c"))</td>
            </tr>
        }
    </tbody>

    <tfoot>
        <tr>
            <td colspan="3">Total:</td>
            <td>@Model.basket.CalculateTotal().ToString("c")</td>
        </tr>
    </tfoot>
</table>

<div>
    <a class="btn btn-primary" href="@Model.ReturnUrl">Continue Shopping</a>
</div>